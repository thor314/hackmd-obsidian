{
    "name": "hackmd-sync",
    "version": "1.0.3",
    "description": "An interface to upload notes to HackMD from Obsidian",
    "main": "main.js",
    "scripts": {
        "dev": "tsc -noEmit -skipLibCheck --watch & node esbuild.config.mjs",
        "build": "tsc -noEmit -skipLibCheck && node esbuild.config.mjs production",
        "version": "node version-bump.mjs && git add manifest.json versions.json",
        "format": "prettier --write '{src,tests}/**/*.{ts,tsx}'",
        "format:check": "prettier --check '{src,tests}/**/*.{ts,tsx}'",
        "lint": "eslint 'src/**/*.ts' 'tests/**/*.ts'",
        "lint:fix": "eslint --fix 'src/**/*.ts' 'tests/**/*.ts'",
        "test": "vitest run",
        "test:watch": "vitest"
    },
    "keywords": [],
    "author": "Thor Kampefner",
    "license": "MIT",
    "devDependencies": {
        "@types/node": "20.x",
        "@typescript-eslint/eslint-plugin": "8.25.0",
        "@typescript-eslint/parser": "8.25.0",
        "@vitest/coverage-v8": "3.0.7",
        "builtin-modules": "5.0.0",
        "esbuild": "0.25.0",
        "eslint": "9.21.0",
        "obsidian": "latest",
        "prettier": "3.5.2",
        "tslib": "2.8.1",
        "typescript": "5.7.3",
        "vitest": "3.0.7"
    },
    "dependencies": {
        "@hackmd/api": "^2.4.0",
        "node-fetch": "^3.3.2"
    }
}
